# Archivo de ejemplo para variables de entorno
# Copia este archivo como .env y configura tus valores

# Base de datos PostgreSQL
# Para desarrollo local
DB_HOST=localhost
DB_USERNAME=postgres
DB_PASSWORD=password
DB_PORT=5432

# Para producción (usa DATABASE_URL en su lugar)
DATABASE_URL=postgresql://usuario:password@localhost:5432/rails_baas_production

# Google OAuth (opcional)
# Obtén estos valores en: https://console.developers.google.com/
GOOGLE_CLIENT_ID=tu_client_id_de_google.apps.googleusercontent.com

# Clave secreta para JWT y sesiones (OBLIGATORIO en producción)
# Genera una nueva con: rails secret
SECRET_KEY_BASE=tu_clave_secreta_super_larga_y_segura_de_al_menos_30_caracteres

# Configuración de email (para Devise en producción)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-password-de-aplicacion

# URL base de la aplicación (para emails y enlaces)
BASE_URL=https://tu-dominio.com

# Configuración de Redis (opcional, para cache y jobs)
REDIS_URL=redis://localhost:6379/0

# Configuración de logs (opcional)
LOG_LEVEL=info

# Configuración de CORS (dominios permitidos, separados por comas)
CORS_ORIGINS=https://tu-frontend.com,https://tu-app.com

# Configuración de rate limiting (opcional)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600
